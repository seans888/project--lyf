            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/identify"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/menuIdentify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/menuIdentifyImg"
            android:layout_alignRight="@+id/menuIdentifyButton"
            android:text="@string/menuIdentify"
